{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --omit=dev && NODE_OPTIONS='--max-old-space-size=4096' npm run build"
  },
  "deploy": {
    "startCommand": "npx docusaurus serve --host 0.0.0.0 --port $PORT --no-open --build",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
